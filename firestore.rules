rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }

    function isValidMatch(data) {
      return data.get('team1', '') is string 
          && data.get('team2', '') is string
          && data.get('status', '') in ['live', 'finished']
          && data.get('version', 0) is number;
    }

    match /matches/{matchId} {
      allow read: if true;
      
      // Full access to test-match for debugging
      allow create, update: if (matchId == 'test-match' || isAuthenticated())
                            && (matchId == 'test-match' || isValidMatch(request.resource.data));

      allow delete: if isAuthenticated();
    }
  }
}
