rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return 'auth' in request && request.auth != null;
    }

    function isValidMatch(data) {
      return data.get('team1', '') is string 
          && data.get('team1', '').size() > 0
          && data.get('team2', '') is string
          && data.get('team2', '').size() > 0
          && data.get('status', '') in ['live', 'finished']
          && data.get('version', 0) is number;
    }

    match /matches/{matchId} {
      allow read: if true;
      
      // Full access to test-match for debugging
      allow create: if (matchId == 'test-match' || isAuthenticated())
                    && (matchId == 'test-match' || isValidMatch(request.resource.data));

      allow update: if (matchId == 'test-match' || isAuthenticated())
                    && (matchId == 'test-match' || isValidMatch(request.resource.data))
                    && (matchId == 'test-match' || request.resource.data.get('version', 0) > resource.data.get('version', 0));

      allow delete: if isAuthenticated();
    }

    match /courts/{courtId} {
      allow read: if true;
      allow create, delete: if isAuthenticated();
      
      // Allow Admin updates OR App updates (only liveMatch/updatedAt)
      allow update: if isAuthenticated() 
                    || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['liveMatch', 'updatedAt', 'lastActive']));
    }
  }
}
