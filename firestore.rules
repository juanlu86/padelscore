rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    match /matches/{matchId} {
      // Allow anyone to read match data
      allow read: if true;
      
      // In development, we allow unauthenticated writes to "test-match"
      // In production, you should require request.auth != null
      allow create, update: if (request.auth != null || matchId == 'test-match')
        && request.resource.data.team1 is string
        && request.resource.data.team2 is string;
        
      // Only authenticated users can delete
      allow delete: if request.auth != null;
    }
  }
}
