rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    match /matches/{matchId} {
      // Allow anyone to read match data
      allow read: if true;
      
      // Only authenticated users can create or update matches
      // In a real app, you might check if they are the "owner" or an "admin"
      allow create, update: if request.auth != null 
        && request.resource.data.team1 is string
        && request.resource.data.team2 is string;
        
      // Only authenticated users can delete
      allow delete: if request.auth != null;
    }
  }
}
